@model HRPayroll.Domain.Entities.HR.Leave

@{
    ViewData["Title"] = "Leave Details";
    ViewData["SubTitle"] = "View Leave Request Details";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Leave Request Details</h3>
        <div class="card-tools">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            @if (Model.Status == HRPayroll.Domain.Enums.LeaveStatus.Pending)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm ml-2">
                    <i class="fas fa-edit"></i> Edit
                </a>
            }
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Employee)
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.Employee?.FullName ?? "N/A")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.LeaveType)
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.LeaveType?.Name ?? "N/A")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.StartDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Model.StartDate.ToString("dd/MM/yyyy")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.EndDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Model.EndDate.ToString("dd/MM/yyyy")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.TotalDays)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.TotalDays) days
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-8">
                        @switch (Model.Status)
                        {
                            case HRPayroll.Domain.Enums.LeaveStatus.Pending:
                                <span class="badge badge-warning">Pending</span>
                                break;
                            case HRPayroll.Domain.Enums.LeaveStatus.Approved:
                                <span class="badge badge-success">Approved</span>
                                break;
                            case HRPayroll.Domain.Enums.LeaveStatus.Rejected:
                                <span class="badge badge-danger">Rejected</span>
                                break;
                            case HRPayroll.Domain.Enums.LeaveStatus.Cancelled:
                                <span class="badge badge-secondary">Cancelled</span>
                                break;
                            case HRPayroll.Domain.Enums.LeaveStatus.Withdrawn:
                                <span class="badge badge-dark">Withdrawn</span>
                                break;
                            default:
                                <span class="badge badge-secondary">@Model.Status</span>
                                break;
                        }
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.IsHalfDay)
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.IsHalfDay ? "Yes (" + Model.HalfDayPortion?.ToString() + ")" : "No")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.AppliedOn)
                    </dt>
                    <dd class="col-sm-8">
                        @Model.AppliedOn.ToString("dd/MM/yyyy HH:mm")
                    </dd>
                    @if (Model.ApprovalDate.HasValue)
                    {
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.ApprovalDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Model.ApprovalDate.Value.ToString("dd/MM/yyyy")
                        </dd>
                    }
                </dl>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Reason)
                    </dt>
                    <dd class="col-sm-10">
                        @(Model.Reason ?? "-")
                    </dd>
                    @if (!string.IsNullOrEmpty(Model.ApprovalRemarks))
                    {
                        <dt class="col-sm-2">
                            Approval Remarks
                        </dt>
                        <dd class="col-sm-10">
                            @Model.ApprovalRemarks
                        </dd>
                    }
                    @if (!string.IsNullOrEmpty(Model.CancellationReason))
                    {
                        <dt class="col-sm-2">
                            Cancellation Reason
                        </dt>
                        <dd class="col-sm-10">
                            @Model.CancellationReason
                        </dd>
                    }
                </dl>
            </div>
        </div>
        @if (Model.Status == HRPayroll.Domain.Enums.LeaveStatus.Pending)
        {
            <div class="row mt-3">
                <div class="col-md-12">
                    <a asp-action="Approve" asp-route-id="@Model.Id" class="btn btn-success">
                        <i class="fas fa-check"></i> Approve
                    </a>
                    <a asp-action="Reject" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-times"></i> Reject
                    </a>
                    <a asp-action="Cancel" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-ban"></i> Cancel
                    </a>
                </div>
            </div>
        }
    </div>
</div>
