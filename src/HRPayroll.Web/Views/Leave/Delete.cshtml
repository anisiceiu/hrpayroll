@model HRPayroll.Domain.Entities.HR.Leave

@{
    ViewData["Title"] = "Delete Leave";
    ViewData["SubTitle"] = "Delete Leave Request";
}

<div class="card">
    <div class="card-header bg-danger">
        <h3 class="card-title">Delete Leave Request</h3>
        <div class="card-tools">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-sm ml-2">
                <i class="fas fa-eye"></i> Details
            </a>
        </div>
    </div>
    <div class="card-body">
        <h4>Are you sure you want to delete this leave request?</h4>
        <div class="alert alert-warning">
            <i class="icon fas fa-exclamation-triangle"></i>
            This action cannot be undone. This will permanently delete the leave request.
        </div>
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Employee)
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.Employee?.FullName ?? "N/A")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.LeaveType)
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.LeaveType?.Name ?? "N/A")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.StartDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Model.StartDate.ToString("dd/MM/yyyy")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.EndDate)
                    </dt>
                    <dd class="col-sm-8">
                        @Model.EndDate.ToString("dd/MM/yyyy")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.TotalDays)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.TotalDays) days
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-8">
                        @switch (Model.Status)
                        {
                            case HRPayroll.Domain.Enums.LeaveStatus.Pending:
                                <span class="badge badge-warning">Pending</span>
                                break;
                            case HRPayroll.Domain.Enums.LeaveStatus.Approved:
                                <span class="badge badge-success">Approved</span>
                                break;
                            case HRPayroll.Domain.Enums.LeaveStatus.Rejected:
                                <span class="badge badge-danger">Rejected</span>
                                break;
                            case HRPayroll.Domain.Enums.LeaveStatus.Cancelled:
                                <span class="badge badge-secondary">Cancelled</span>
                                break;
                            case HRPayroll.Domain.Enums.LeaveStatus.Withdrawn:
                                <span class="badge badge-dark">Withdrawn</span>
                                break;
                            default:
                                <span class="badge badge-secondary">@Model.Status</span>
                                break;
                        }
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Reason)
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.Reason ?? "-")
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <div class="card-footer">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary float-right">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
