@model IEnumerable<HRPayroll.Web.Controllers.UserListViewModel>
@{
    ViewData["Title"] = "User Management";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">User List</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Linked Employee</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge bg-@GetRoleBadgeColor(user.Role)">
                                        @user.Role
                                    </span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.EmployeeName))
                                    {
                                        <span class="text-success">@user.EmployeeName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not Linked</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="LinkEmployee" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-link"></i> @(string.IsNullOrEmpty(user.EmployeeName) ? "Link Employee" : "Change")
                                    </a>
                                    @if (!string.IsNullOrEmpty(user.EmployeeName))
                                    {
                                        <a asp-action="UnlinkEmployee" asp-route-id="@user.Id" class="btn btn-sm btn-danger" 
                                           onclick="return confirm('Are you sure you want to unlink this employee?')">
                                            <i class="fas fa-unlink"></i> Unlink
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>

@functions {
    string GetRoleBadgeColor(string role)
    {
        return role switch
        {
            "Admin" => "danger",
            "Manager" => "warning",
            "Employee" => "primary",
            _ => "secondary"
        };
    }
}
