@model HRPayroll.Domain.Entities.HR.LeaveType

@{
    ViewData["Title"] = "Delete Leave Type";
    ViewData["SubTitle"] = "Delete Leave Type";
}

<div class="card">
    <div class="card-header bg-danger">
        <h3 class="card-title">Delete Leave Type</h3>
        <div class="card-tools">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-sm ml-2">
                <i class="fas fa-eye"></i> Details
            </a>
        </div>
    </div>
    <div class="card-body">
        <h4>Are you sure you want to delete this leave type?</h4>
        <div class="alert alert-warning">
            <i class="icon fas fa-exclamation-triangle"></i>
            This action cannot be undone. This will permanently delete the leave type and all associated leave balances.
        </div>
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Code)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Code)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.Description ?? "-")
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.IsPaidLeave)
                    </dt>
                    <dd class="col-sm-6">
                        @(Model.IsPaidLeave ? "Yes" : "No")
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </dt>
                    <dd class="col-sm-6">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <div class="card-footer">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary float-right">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
