@model HRPayroll.Domain.Entities.HR.Employee
@{
    ViewData["Title"] = "Employee Details";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Employee Details</h3>
                <div class="card-tools">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-default btn-sm">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 text-center">
                        <img src="~/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image" style="width: 150px; height: 150px;">
                        <h4 class="mt-3">@Model.FirstName @Model.LastName</h4>
                        <span class="badge badge-@(Model.Status == HRPayroll.Domain.Enums.EmployeeStatus.Active ? "success" : "danger")">
                            @Model.Status
                        </span>
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-box">
                                    <span class="info-box-icon bg-info"><i class="fas fa-id-card"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Employee Code</span>
                                        <span class="info-box-number">@Model.EmployeeCode</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-box">
                                    <span class="info-box-icon bg-success"><i class="fas fa-envelope"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Email</span>
                                        <span class="info-box-number">@Model.Email</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-box">
                                    <span class="info-box-icon bg-warning"><i class="fas fa-phone"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Phone</span>
                                        <span class="info-box-number">@(Model.Phone ?? "N/A")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-box">
                                    <span class="info-box-icon bg-danger"><i class="fas fa-calendar"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Date of Joining</span>
                                        <span class="info-box-number">@(Model.DateOfJoining?.ToString("dd MMM yyyy") ?? "N/A")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />

                <h5>Personal Information</h5>
                <div class="row">
                    <div class="col-md-4">
                        <strong>Full Name:</strong> @Model.FirstName @Model.LastName
                    </div>
                    <div class="col-md-4">
                        <strong>Email:</strong> @Model.Email
                    </div>
                    <div class="col-md-4">
                        <strong>Phone:</strong> @(Model.Phone ?? "N/A")
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-4">
                        <strong>Date of Birth:</strong> @(Model.DateOfBirth?.ToString("dd MMM yyyy") ?? "N/A")
                    </div>
                    <div class="col-md-4">
                        <strong>Gender:</strong> @Model.Gender
                    </div>
                    <div class="col-md-4">
                        <strong>Marital Status:</strong> @Model.MaritalStatus
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-4">
                        <strong>National ID:</strong> @(Model.NationalId ?? "N/A")
                    </div>
                    <div class="col-md-4">
                        <strong>TIN Number:</strong> @(Model.TinNo ?? "N/A")
                    </div>
                    <div class="col-md-4">
                        <strong>Blood Group:</strong> @(Model.BloodGroup ?? "N/A")
                    </div>
                </div>

                <hr />

                <h5>Employment Information</h5>
                <div class="row">
                    <div class="col-md-4">
                        <strong>Department:</strong> @(Model.Department?.Name ?? "N/A")
                    </div>
                    <div class="col-md-4">
                        <strong>Designation:</strong> @(Model.Designation?.Name ?? "N/A")
                    </div>
                    <div class="col-md-4">
                        <strong>Shift:</strong> @(Model.Shift?.Name ?? "N/A")
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-4">
                        <strong>Employment Type:</strong> @Model.EmploymentType
                    </div>
                    <div class="col-md-4">
                        <strong>Date of Joining:</strong> @(Model.DateOfJoining?.ToString("dd MMM yyyy") ?? "N/A")
                    </div>
                    <div class="col-md-4">
                        <strong>Date of Confirmation:</strong> @(Model.DateOfConfirmation?.ToString("dd MMM yyyy") ?? "N/A")
                    </div>
                </div>

                <hr />

                <h5>Bank Information</h5>
                <div class="row">
                    <div class="col-md-4">
                        <strong>Bank Account Number:</strong> @(Model.BankAccountNo ?? "N/A")
                    </div>
                    <div class="col-md-4">
                        <strong>Bank Name:</strong> @(Model.BankName ?? "N/A")
                    </div>
                    <div class="col-md-4">
                        <strong>Branch Name:</strong> @(Model.BranchName ?? "N/A")
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-4">
                        <strong>Tax Exempted:</strong> @(Model.IsTaxExempted ? "Yes" : "No")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
