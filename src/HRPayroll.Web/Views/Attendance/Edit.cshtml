@model HRPayroll.Domain.Entities.HR.Attendance

@{
    ViewData["Title"] = "Edit Attendance";
    ViewData["SubTitle"] = "Edit Attendance Record";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Edit Attendance Record</h3>
        <div class="card-tools">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-sm ml-2">
                <i class="fas fa-eye"></i> Details
            </a>
        </div>
    </div>
    <form asp-action="Edit">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EmployeeId" class="control-label">Employee</label>
                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId">
                            <option value="">-- Select Employee --</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Date" class="control-label">Date</label>
                        <input asp-for="Date" class="form-control" type="date" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ClockInTime" class="control-label">Clock In Time</label>
                        <input asp-for="ClockInTime" class="form-control" type="time" />
                        <span asp-validation-for="ClockInTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ClockOutTime" class="control-label">Clock Out Time</label>
                        <input asp-for="ClockOutTime" class="form-control" type="time" />
                        <span asp-validation-for="ClockOutTime" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Status" class="control-label">Status</label>
                        <select asp-for="Status" class="form-control" asp-items="ViewBag.StatusList">
                            <option value="">-- Select Status --</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EntryType" class="control-label">Entry Type</label>
                        <select asp-for="EntryType" class="form-control" asp-items="ViewBag.EntryTypeList">
                            <option value="">-- Select Entry Type --</option>
                        </select>
                        <span asp-validation-for="EntryType" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="LateMinutes" class="control-label">Late Minutes</label>
                        <input asp-for="LateMinutes" class="form-control" type="number" min="0" />
                        <span asp-validation-for="LateMinutes" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EarlyLeavingMinutes" class="control-label">Early Leaving Minutes</label>
                        <input asp-for="EarlyLeavingMinutes" class="form-control" type="number" min="0" />
                        <span asp-validation-for="EarlyLeavingMinutes" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="WorkingHours" class="control-label">Working Hours</label>
                        <input asp-for="WorkingHours" class="form-control" type="number" step="0.01" min="0" max="24" />
                        <span asp-validation-for="WorkingHours" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="OvertimeHours" class="control-label">Overtime Hours</label>
                        <input asp-for="OvertimeHours" class="form-control" type="number" step="0.01" min="0" max="24" />
                        <span asp-validation-for="OvertimeHours" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BiometricDeviceId" class="control-label">Biometric Device ID</label>
                        <input asp-for="BiometricDeviceId" class="form-control" />
                        <span asp-validation-for="BiometricDeviceId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="BiometricLogId" class="control-label">Biometric Log ID</label>
                        <input asp-for="BiometricLogId" class="form-control" />
                        <span asp-validation-for="BiometricLogId" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Remarks" class="control-label">Remarks</label>
                <textarea asp-for="Remarks" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save Changes
            </button>
            <a asp-action="Index" class="btn btn-secondary float-right">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
