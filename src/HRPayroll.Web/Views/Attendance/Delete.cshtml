@model HRPayroll.Domain.Entities.HR.Attendance

@{
    ViewData["Title"] = "Delete Attendance";
    ViewData["SubTitle"] = "Delete Attendance Record";
}

<div class="card">
    <div class="card-header bg-danger">
        <h3 class="card-title">Delete Attendance</h3>
        <div class="card-tools">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-sm ml-2">
                <i class="fas fa-eye"></i> Details
            </a>
        </div>
    </div>
    <div class="card-body">
        <h4>Are you sure you want to delete this attendance record?</h4>
        <div class="alert alert-warning">
            <i class="icon fas fa-exclamation-triangle"></i>
            This action cannot be undone. This will permanently delete the attendance record.
        </div>
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Employee)
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.Employee?.FullName ?? "N/A")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Date.ToString("dd/MM/yyyy")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.ClockInTime)
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.ClockInTime.HasValue ? Model.ClockInTime.Value.Hours.ToString("D2") + ":" + Model.ClockInTime.Value.Minutes.ToString("D2") : "-")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.ClockOutTime)
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.ClockOutTime.HasValue ? Model.ClockOutTime.Value.Hours.ToString("D2") + ":" + Model.ClockOutTime.Value.Minutes.ToString("D2") : "-")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.WorkingHours)
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.WorkingHours.HasValue ? Model.WorkingHours.Value.ToString("F2") : "-")
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd class="col-sm-8">
                        @switch (Model.Status)
                        {
                            case HRPayroll.Domain.Enums.AttendanceStatus.Present:
                                <span class="badge badge-success">Present</span>
                                break;
                            case HRPayroll.Domain.Enums.AttendanceStatus.Absent:
                                <span class="badge badge-danger">Absent</span>
                                break;
                            case HRPayroll.Domain.Enums.AttendanceStatus.Late:
                                <span class="badge badge-warning">Late</span>
                                break;
                            case HRPayroll.Domain.Enums.AttendanceStatus.HalfDay:
                                <span class="badge badge-info">Half Day</span>
                                break;
                            case HRPayroll.Domain.Enums.AttendanceStatus.Leave:
                                <span class="badge badge-secondary">Leave</span>
                                break;
                            case HRPayroll.Domain.Enums.AttendanceStatus.Holiday:
                                <span class="badge badge-primary">Holiday</span>
                                break;
                            case HRPayroll.Domain.Enums.AttendanceStatus.Weekend:
                                <span class="badge badge-dark">Weekend</span>
                                break;
                            case HRPayroll.Domain.Enums.AttendanceStatus.OnDuty:
                                <span class="badge badge-light">On Duty</span>
                                break;
                            case HRPayroll.Domain.Enums.AttendanceStatus.Compensatory:
                                <span class="badge badge-warning">Compensatory</span>
                                break;
                            default:
                                <span class="badge badge-secondary">@Model.Status</span>
                                break;
                        }
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.EntryType)
                    </dt>
                    <dd class="col-sm-8">
                        @Model.EntryType.ToString()
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.LateMinutes)
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.LateMinutes.HasValue ? Model.LateMinutes.Value.ToString() + " minutes" : "-")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.EarlyLeavingMinutes)
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.EarlyLeavingMinutes.HasValue ? Model.EarlyLeavingMinutes.Value.ToString() + " minutes" : "-")
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <div class="card-footer">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-secondary float-right">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
