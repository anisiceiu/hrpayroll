@model IEnumerable<HRPayroll.Domain.Entities.HR.Attendance>

@{
    ViewData["Title"] = "Attendance";
    ViewData["SubTitle"] = "Manage Employee Attendance";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Attendance List</h3>
        <div class="card-tools">
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Record New Attendance
            </a>
            <a asp-action="DateRange" class="btn btn-info btn-sm ml-2">
                <i class="fas fa-calendar"></i> Date Range Report
            </a>
        </div>
    </div>
    <div class="card-body">
        <table id="attendanceTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClockInTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ClockOutTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WorkingHours)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EntryType)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @(item.Employee?.FullName ?? "N/A")
                        </td>
                        <td>
                            @item.Date.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @(item.ClockInTime.HasValue ? item.ClockInTime.Value.Hours.ToString("D2") + ":" + item.ClockInTime.Value.Minutes.ToString("D2") : "-")
                        </td>
                        <td>
                            @(item.ClockOutTime.HasValue ? item.ClockOutTime.Value.Hours.ToString("D2") + ":" + item.ClockOutTime.Value.Minutes.ToString("D2") : "-")
                        </td>
                        <td>
                            @(item.WorkingHours.HasValue ? item.WorkingHours.Value.ToString("F2") : "-")
                        </td>
                        <td>
                            @switch (item.Status)
                            {
                                case HRPayroll.Domain.Enums.AttendanceStatus.Present:
                                    <span class="badge badge-success">Present</span>
                                    break;
                                case HRPayroll.Domain.Enums.AttendanceStatus.Absent:
                                    <span class="badge badge-danger">Absent</span>
                                    break;
                                case HRPayroll.Domain.Enums.AttendanceStatus.Late:
                                    <span class="badge badge-warning">Late</span>
                                    break;
                                case HRPayroll.Domain.Enums.AttendanceStatus.HalfDay:
                                    <span class="badge badge-info">Half Day</span>
                                    break;
                                case HRPayroll.Domain.Enums.AttendanceStatus.Leave:
                                    <span class="badge badge-secondary">Leave</span>
                                    break;
                                case HRPayroll.Domain.Enums.AttendanceStatus.Holiday:
                                    <span class="badge badge-primary">Holiday</span>
                                    break;
                                case HRPayroll.Domain.Enums.AttendanceStatus.Weekend:
                                    <span class="badge badge-dark">Weekend</span>
                                    break;
                                case HRPayroll.Domain.Enums.AttendanceStatus.OnDuty:
                                    <span class="badge badge-light">On Duty</span>
                                    break;
                                case HRPayroll.Domain.Enums.AttendanceStatus.Compensatory:
                                    <span class="badge badge-warning">Compensatory</span>
                                    break;
                                default:
                                    <span class="badge badge-secondary">@item.Status</span>
                                    break;
                            }
                        </td>
                        <td>
                            @item.EntryType.ToString()
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $("#attendanceTable").DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#attendanceTable_wrapper .col-md-6:eq(0)');
        });
    </script>
}
