@model HRPayroll.Domain.Entities.Payroll.PayrollRun

@{
    ViewData["Title"] = "Edit Payroll Run";
    ViewData["SubTitle"] = "Update Payroll Run Details";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Edit Payroll Run</h3>
        <div class="card-tools">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
    <form asp-action="Edit">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RunCode" />
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="TotalGrossSalary" />
            <input type="hidden" asp-for="TotalDeductions" />
            <input type="hidden" asp-for="TotalNetSalary" />
            <input type="hidden" asp-for="TotalEmployees" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Month">Month</label>
                        <select asp-for="Month" class="form-control" asp-items="ViewBag.MonthList">
                        </select>
                        <span asp-validation-for="Month" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Year">Year</label>
                        <select asp-for="Year" class="form-control" asp-items="ViewBag.YearList">
                        </select>
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StartDate">Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EndDate">End Date</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PaymentDate">Payment Date</label>
                        <input asp-for="PaymentDate" type="date" class="form-control" />
                        <span asp-validation-for="PaymentDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Notes">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save Changes
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
