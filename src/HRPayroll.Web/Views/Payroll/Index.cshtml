@model IEnumerable<HRPayroll.Domain.Entities.Payroll.PayrollRun>

@{
    ViewData["Title"] = "Payroll Management";
    ViewData["SubTitle"] = "Manage Payroll Runs";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Payroll Runs List</h3>
        <div class="card-tools">
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> New Payroll Run
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-check"></i> Success!</h5>
                @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <h5><i class="icon fas fa-ban"></i> Error!</h5>
                @TempData["Error"]
            </div>
        }

        <table id="payrollTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RunCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Month)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Year)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalEmployees)
                    </th>
                    <th>
                        Total Net Salary
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RunCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(item.Month)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalEmployees)
                        </td>
                        <td>
                            @item.TotalNetSalary.ToString("C")
                        </td>
                        <td>
                            @switch (item.Status)
                            {
                                case HRPayroll.Domain.Enums.PayrollRunStatus.Draft:
                                    <span class="badge badge-secondary">Draft</span>
                                    break;
                                case HRPayroll.Domain.Enums.PayrollRunStatus.PendingApproval:
                                    <span class="badge badge-warning">Pending Approval</span>
                                    break;
                                case HRPayroll.Domain.Enums.PayrollRunStatus.Approved:
                                    <span class="badge badge-info">Approved</span>
                                    break;
                                case HRPayroll.Domain.Enums.PayrollRunStatus.Processed:
                                    <span class="badge badge-primary">Processed</span>
                                    break;
                                case HRPayroll.Domain.Enums.PayrollRunStatus.Paid:
                                    <span class="badge badge-success">Paid</span>
                                    break;
                                case HRPayroll.Domain.Enums.PayrollRunStatus.Cancelled:
                                    <span class="badge badge-danger">Cancelled</span>
                                    break;
                                default:
                                    <span class="badge badge-secondary">@item.Status</span>
                                    break;
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                            @if (item.Status == HRPayroll.Domain.Enums.PayrollRunStatus.Draft)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="SubmitForApprovalConfirmed" asp-route-id="@item.Id" method="post" style="display: inline;">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Are you sure you want to submit this payroll for approval?');">
                                        <i class="fas fa-paper-plane"></i> Submit
                                    </button>
                                </form>
                            }
                            @if (item.Status == HRPayroll.Domain.Enums.PayrollRunStatus.PendingApproval)
                            {
                                <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                    <i class="fas fa-check"></i>
                                </a>
                            }
                            @if (item.Status == HRPayroll.Domain.Enums.PayrollRunStatus.Approved)
                            {
                                <a asp-action="Process" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-cog"></i> Process
                                </a>
                            }
                            @if (item.Status == HRPayroll.Domain.Enums.PayrollRunStatus.Processed)
                            {
                                <a asp-action="MarkAsPaid" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                    <i class="fas fa-money-bill"></i> Mark Paid
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $("#payrollTable").DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "order": [[3, "desc"], [2, "desc"]],
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#payrollTable_wrapper .col-md-6:eq(0)');
        });
    </script>
}
