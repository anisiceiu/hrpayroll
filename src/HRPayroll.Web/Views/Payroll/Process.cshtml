@model HRPayroll.Domain.Entities.Payroll.PayrollRun

@{
    ViewData["Title"] = "Process Payroll";
    ViewData["SubTitle"] = "Process Payroll Run";
}

<div class="card">
    <div class="card-header bg-primary">
        <h3 class="card-title">Process Payroll Run</h3>
        <div class="card-tools">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
    <div class="card-body">
        <h4>You are about to process the following payroll run:</h4>
        <div class="alert alert-info mt-3">
            <strong>@Model.RunCode</strong> - @Model.Name
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Total Employees</dt>
                    <dd class="col-sm-8">@Model.TotalEmployees</dd>
                    <dt class="col-sm-4">Total Gross Salary</dt>
                    <dd class="col-sm-8">@Model.TotalGrossSalary.ToString("C")</dd>
                    <dt class="col-sm-4">Total Deductions</dt>
                    <dd class="col-sm-8">@Model.TotalDeductions.ToString("C")</dd>
                    <dt class="col-sm-4">Total Net Salary</dt>
                    <dd class="col-sm-8"><strong>@Model.TotalNetSalary.ToString("C")</strong></dd>
                </dl>
            </div>
        </div>
        <div class="alert alert-warning mt-3">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Warning:</strong> Processing payroll will generate payroll details for all active employees. This action cannot be undone once processed.
        </div>
    </div>
    <form asp-action="ProcessConfirmed">
        <input type="hidden" asp-for="Id" />
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-cog"></i> Confirm Processing
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
