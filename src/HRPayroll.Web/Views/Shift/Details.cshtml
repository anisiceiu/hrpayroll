@model HRPayroll.Domain.Entities.HR.Shift
@{
    ViewData["Title"] = "Shift Details";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Shift Details</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Code</dt>
                    <dd class="col-sm-9">@Model.Code</dd>

                    <dt class="col-sm-3">Start Time</dt>
                    <dd class="col-sm-9">@Model.StartTime.Hours:@Model.StartTime.Minutes.ToString("D2")</dd>

                    <dt class="col-sm-3">End Time</dt>
                    <dd class="col-sm-9">@Model.EndTime.Hours:@Model.EndTime.Minutes.ToString("D2")</dd>

                    <dt class="col-sm-3">Break Time</dt>
                    <dd class="col-sm-9">@Model.BreakTimeMinutes minutes</dd>

                    <dt class="col-sm-3">Grace Time</dt>
                    <dd class="col-sm-9">@Model.GraceTimeMinutes minutes</dd>

                    <dt class="col-sm-3">Working Hours</dt>
                    <dd class="col-sm-9">@Model.WorkingHours hours</dd>

                    <dt class="col-sm-3">Night Shift</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsNightShift)
                        {
                            <span class="badge bg-info">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Created At</dt>
                    <dd class="col-sm-9">@Model.CreatedAt</dd>

                    @if (Model.UpdatedAt != null)
                    {
                        <dt class="col-sm-3">Updated At</dt>
                        <dd class="col-sm-9">@Model.UpdatedAt</dd>
                    }
                </dl>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-default float-right">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
