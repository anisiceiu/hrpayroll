@model IEnumerable<HRPayroll.Domain.Entities.HR.EmployeeShift>
@{
    ViewData["Title"] = "Employee Shift Assignments";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Employee Shift Assignments</h3>
                <div class="card-tools">
                    <a asp-action="AssignShift" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Assign Shift
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h5><i class="icon fas fa-check"></i> Success!</h5>
                        @TempData["Success"]
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h5><i class="icon fas fa-ban"></i> Error!</h5>
                        @TempData["Error"]
                    </div>
                }

                <table id="employeeShiftTable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Department</th>
                            <th>Shift</th>
                            <th>Shift Time</th>
                            <th>Effective From</th>
                            <th>Effective To</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Employee?.FullName</td>
                                <td>@item.Employee?.Department?.Name</td>
                                <td>@item.Shift?.Name (@item.Shift?.Code)</td>
                                <td>
                                    @if (item.Shift != null)
                                    {
                                        <span>@item.Shift.StartTime.Hours:@item.Shift.StartTime.Minutes.ToString("D2")</span>
                                        <span>-</span>
                                        <span>@item.Shift.EndTime.Hours:@item.Shift.EndTime.Minutes.ToString("D2") </span>
                                    }
                                </td>
                                <td>@item.EffectiveFrom.ToString("dd MMM yyyy")</td>
                                <td>
                                    @if (item.EffectiveTo.HasValue)
                                    {
                                        @item.EffectiveTo.Value.ToString("dd MMM yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Ongoing</span>
                                    }
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="EditEmployeeShift" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form asp-action="RemoveEmployeeShift" asp-route-id="@item.Id" method="post" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to remove this shift assignment?');">
                                            <i class="fas fa-trash"></i> Remove
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#employeeShiftTable').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "language": {
                    "emptyTable": "No employee shift assignments found"
                }
            });
        });
    </script>
}
