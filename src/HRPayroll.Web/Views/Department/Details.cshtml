@model HRPayroll.Domain.Entities.HR.Department
@{
    ViewData["Title"] = "Department Details";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Department Details</h3>
                <div class="card-tools">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-default btn-sm">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon bg-primary"><i class="fas fa-building"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Department Code</span>
                                <span class="info-box-number">@Model.Code</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box">
                            <span class="info-box-icon bg-success"><i class="fas fa-tag"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Department Name</span>
                                <span class="info-box-number">@Model.Name</span>
                            </div>
                        </div>
                    </div>
                </div>

                <hr />

                <h5>Department Information</h5>
                <div class="row">
                    <div class="col-md-6">
                        <strong>Department Code:</strong> @Model.Code
                    </div>
                    <div class="col-md-6">
                        <strong>Department Name:</strong> @Model.Name
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-12">
                        <strong>Description:</strong> @(string.IsNullOrEmpty(Model.Description) ? "N/A" : Model.Description)
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6">
                        <strong>Status:</strong> @(Model.IsActive ? "Active" : "Inactive")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
