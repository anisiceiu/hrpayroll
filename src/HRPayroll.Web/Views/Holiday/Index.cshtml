@model IEnumerable<HRPayroll.Domain.Entities.HR.Holiday>

@{
    ViewData["Title"] = "Holiday Management";
    ViewData["SubTitle"] = "Manage Organizational Holidays";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Holidays List</h3>
        <div class="card-tools">
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Add New Holiday
            </a>
        </div>
    </div>
    <div class="card-body">
        <table id="holidayTable" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DayOfWeek)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsRepeatAnnually)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @item.Date.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DayOfWeek)
                        </td>
                        <td>
                            @switch (item.Type)
                            {
                                case HRPayroll.Domain.Enums.HolidayType.National:
                                    <span class="badge badge-primary">National</span>
                                    break;
                                case HRPayroll.Domain.Enums.HolidayType.Festival:
                                    <span class="badge badge-success">Festival</span>
                                    break;
                                case HRPayroll.Domain.Enums.HolidayType.Religious:
                                    <span class="badge badge-info">Religious</span>
                                    break;
                                case HRPayroll.Domain.Enums.HolidayType.Optional:
                                    <span class="badge badge-warning">Optional</span>
                                    break;
                                case HRPayroll.Domain.Enums.HolidayType.Weekly:
                                    <span class="badge badge-secondary">Weekly</span>
                                    break;
                                case HRPayroll.Domain.Enums.HolidayType.Special:
                                    <span class="badge badge-dark">Special</span>
                                    break;
                                default:
                                    <span class="badge badge-secondary">@item.Type</span>
                                    break;
                            }
                        </td>
                        <td>
                            @(item.IsRepeatAnnually ? "Yes" : "No")
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $("#holidayTable").DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": false,
                "order": [[1, "asc"]],
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#holidayTable_wrapper .col-md-6:eq(0)');
        });
    </script>
}
