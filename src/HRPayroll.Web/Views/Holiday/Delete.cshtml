@model HRPayroll.Domain.Entities.HR.Holiday

@{
    ViewData["Title"] = "Delete Holiday";
    ViewData["SubTitle"] = "Confirm Delete Holiday";
}

<div class="card">
    <div class="card-header bg-danger">
        <h3 class="card-title">Delete Holiday</h3>
        <div class="card-tools">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
    <div class="card-body">
        <h3>Are you sure you want to delete this holiday?</h3>
        <div class="alert alert-warning mt-3">
            <i class="fas fa-exclamation-triangle"></i>
            This action cannot be undone. This will permanently delete the holiday record.
        </div>
        <div class="row mt-3">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-sm-8">
                        @Model.Date.ToString("dd/MM/yyyy")
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.DayOfWeek)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.DayOfWeek)
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Type)
                    </dt>
                    <dd class="col-sm-8">
                        @switch (Model.Type)
                        {
                            case HRPayroll.Domain.Enums.HolidayType.National:
                                <span class="badge badge-primary">National</span>
                                break;
                            case HRPayroll.Domain.Enums.HolidayType.Festival:
                                <span class="badge badge-success">Festival</span>
                                break;
                            case HRPayroll.Domain.Enums.HolidayType.Religious:
                                <span class="badge badge-info">Religious</span>
                                break;
                            case HRPayroll.Domain.Enums.HolidayType.Optional:
                                <span class="badge badge-warning">Optional</span>
                                break;
                            case HRPayroll.Domain.Enums.HolidayType.Weekly:
                                <span class="badge badge-secondary">Weekly</span>
                                break;
                            case HRPayroll.Domain.Enums.HolidayType.Special:
                                <span class="badge badge-dark">Special</span>
                                break;
                            default:
                                <span class="badge badge-secondary">@Model.Type</span>
                                break;
                        }
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.IsRepeatAnnually)
                    </dt>
                    <dd class="col-sm-8">
                        @(Model.IsRepeatAnnually ? "Yes" : "No")
                    </dd>
                </dl>
            </div>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="card-footer">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete Holiday
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
