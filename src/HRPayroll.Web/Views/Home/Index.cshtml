@model HRPayroll.Web.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-lg-3 col-6">
        <!-- small card -->
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.TotalEmployees</h3>
                <p>Total Employees</p>
            </div>
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
            <a asp-controller="Employee" asp-action="Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small card -->
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@Model.TodayPresent</h3>
                <p>Present Today</p>
            </div>
            <div class="icon">
                <i class="fas fa-user-check"></i>
            </div>
            <a asp-controller="Attendance" asp-action="DailyAttendance" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small card -->
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>5</h3>
                <p>Pending Leaves</p>
            </div>
            <div class="icon">
                <i class="fas fa-calendar-minus"></i>
            </div>
            <a asp-controller="Leave" asp-action="PendingApprovals" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <!-- ./col -->
    <div class="col-lg-3 col-6">
        <!-- small card -->
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>2</h3>
                <p>Pending Payroll</p>
            </div>
            <div class="icon">
                <i class="fas fa-money-bill-wave"></i>
            </div>
            <a asp-controller="Payroll" asp-action="Index" class="small-box-footer">
                More info <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    <!-- ./col -->
</div>

<div class="row">
    <div class="col-md-8">
        <!-- TABLE: LATEST ORDERS -->
        <div class="card">
            <div class="card-header border-transparent">
                <h3 class="card-title">Today's Attendance</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table m-0">
                        <thead>
                            <tr>
                                <th>Employee</th>
                                <th>Status</th>
                                <th>Time In</th>
                                <th>Time Out</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var attendance in Model.Attendances)
                            {
                                <tr>
                                    <td><a href="@Url.Action("Details", "Employee", new { id = attendance.EmployeeId })">@attendance?.Employee?.FullName</a></td>
                                    <td>
                                        @if (attendance.Status == AttendanceStatus.Present)
                                        {
                                            <span class="badge badge-success">Present</span>
                                        }
                                        else if(attendance.Status == AttendanceStatus.Leave)
                                        {
                                            <span class="badge badge-warning">On Leave</span>
                                        }
                                        else if(attendance.Status == AttendanceStatus.Holiday)
                                        {
                                            <span class="badge badge-info">Holiday</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Absent</span>
                                        }
                                    </td>
                                    <td> @(attendance.ClockInTime.HasValue? attendance.ClockInTime.Value.Hours.ToString("D2") + ":" + attendance.ClockInTime.Value.Minutes.ToString("D2") : "-")</td>
                                    <td>@(attendance.ClockOutTime.HasValue? attendance.ClockOutTime.Value.Hours.ToString("D2") + ":" + attendance.ClockOutTime.Value.Minutes.ToString("D2") : "-")</td>
                                </tr>
                            }
                           
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.card-body -->
            <div class="card-footer clearfix">
                <a asp-controller="Attendance" asp-action="DailyAttendance" class="btn btn-sm btn-info float-left">View All Attendance</a>
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->

    <div class="col-md-4">
        <!-- Info Boxes Style 2 -->
        <div class="info-box mb-3 bg-warning">
            <span class="info-box-icon"><i class="fas fa-tag"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Departments</span>
                <span class="info-box-number">@Model.TotalDepartments</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
        <div class="info-box mb-3 bg-success">
            <span class="info-box-icon"><i class="fas fa-briefcase"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Designations</span>
                <span class="info-box-number">@Model.TotalDesignations</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
        <div class="info-box mb-3 bg-danger">
            <span class="info-box-icon"><i class="fas fa-calendar"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Holidays This Month</span>
                <span class="info-box-number">2</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->
        <div class="info-box mb-3 bg-info">
            <span class="info-box-icon"><i class="fas fa-clock"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">Shifts</span>
                <span class="info-box-number">@Model.TotalShifts</span>
            </div>
            <!-- /.info-box-content -->
        </div>
        <!-- /.info-box -->

        <!-- PRODUCT LIST -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Pending Leave Applications</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body p-0">
                <ul class="products-list product-list-in-card pl-2 pr-2">
                    <li class="item">
                        
                        <div class="product-info">
                            <a href="#" class="product-title">
                                John Doe
                                <span class="badge badge-warning float-right">5 days</span>
                            </a>
                            <span class="product-description">
                                Annual Leave - Summer Vacation
                            </span>
                        </div>
                    </li>
                    <!-- /.item -->
                    <li class="item">
                        
                        <div class="product-info">
                            <a href="#" class="product-title">
                                Jane Smith
                                <span class="badge badge-info float-right">2 days</span>
                            </a>
                            <span class="product-description">
                                Sick Leave - Medical Appointment
                            </span>
                        </div>
                    </li>
                    <!-- /.item -->
                </ul>
            </div>
            <!-- /.card-body -->
            <div class="card-footer text-center">
                <a asp-controller="Leave" asp-action="PendingApprovals" class="uppercase">View All Pending Leaves</a>
            </div>
            <!-- /.card-footer -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>

<div class="row">
    <div class="col-md-6">
        <!-- BAR CHART -->
        <div class="card card-success">
            <div class="card-header">
                <h3 class="card-title">Monthly Attendance Overview</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="chart">
                    <canvas id="barChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->

    <div class="col-md-6">
        <!-- PIE CHART -->
        <div class="card card-danger">
            <div class="card-header">
                <h3 class="card-title">Department Distribution</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <canvas id="pieChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>

@section Scripts {
    <script>
        $(function () {
            // Bar Chart
            var barChartCanvas = $('#barChart').get(0).getContext('2d')
            var barChartData = {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                datasets: [
                    {
                        label: 'Present',
                        backgroundColor: 'rgba(40, 167, 69, 0.9)',
                        borderColor: 'rgba(40, 167, 69, 1)',
                        data: [145, 142, 148, 140]
                    },
                    {
                        label: 'Absent',
                        backgroundColor: 'rgba(220, 53, 69, 0.9)',
                        borderColor: 'rgba(220, 53, 69, 1)',
                        data: [5, 8, 2, 10]
                    }
                ]
            }
            var barChartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                datasetFill: false
            }
            new Chart(barChartCanvas, {
                type: 'bar',
                data: barChartData,
                options: barChartOptions
            })

            // Pie Chart
            var pieChartCanvas = $('#pieChart').get(0).getContext('2d')
            var pieData = {
                labels: ['IT', 'HR', 'Finance', 'Marketing', 'Operations'],
                datasets: [{
                    data: [45, 20, 25, 15, 45],
                    backgroundColor: ['#f56954', '#00a65a', '#f39c12', '#00c0ef', '#3c8dbc']
                }]
            }
            var pieChartOptions = {
                responsive: true,
                maintainAspectRatio: false
            }
            new Chart(pieChartCanvas, {
                type: 'pie',
                data: pieData,
                options: pieChartOptions
            })
        })
    </script>
}
