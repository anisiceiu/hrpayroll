<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>HR & Payroll Management System</title>

    <!-- Bootstrap 4 CSS -->
    <link rel="stylesheet" href="~/plugins/bootstrap/css/bootstrap.min.css">

    <!-- AdminLTE 3.x (Bootstrap 4 Compatible) -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/dist/css/custom.css">

    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        @if (User.Identity?.IsAuthenticated == true)
        {
            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                            <i class="fas fa-bars"></i>
                        </a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a asp-controller="EmployeeDashboard" asp-action="Index" class="nav-link">My Dashboard</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="far fa-bell"></i>
                            <span class="badge badge-warning navbar-badge">5</span>
                        </a>
                    </li>
                    <li class="nav-item dropdown user-menu">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                            <img src="~/dist/img/user2-160x160.jpg" class="user-image" alt="User Image">
                            <span class="d-none d-md-inline">@User.Identity.Name</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                            <div class="dropdown-header text-center">
                                <img src="~/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image" style="width: 50px; height: 50px;">
                                <p class="mt-2 mb-0">@User.Identity.Name</p>
                                <small>@User.FindFirst("Role")?.Value</small>
                            </div>
                            <div class="dropdown-divider"></div>
                            <div class="dropdown-footer">
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button type="submit" class="btn btn-default btn-flat float-right">Logout</button>
                                </form>
                            </div>
                        </div>
                    </li>
                </ul>
            </nav>

            <!-- Main Sidebar -->
            <aside class="main-sidebar sidebar-dark-primary elevation-1">
                <a asp-controller="Home" asp-action="Index" class="brand-link">
                    <i class="fas fa-users-cog brand-image img-circle elevation-3" style="opacity: .8"></i>
                    <span class="brand-text font-weight-bold">HR & Payroll</span>
                </a>
                <div class="sidebar">
                    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                        <div class="image">
                            <img src="~/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                        </div>
                        <div class="info">
                            <a href="#" class="d-block">@User.Identity?.Name</a>
                        </div>
                    </div>
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            @if (User.IsInRole("Employee"))
                            {
                                <li class="nav-item">
                                    <a asp-controller="EmployeeDashboard" asp-action="Index" class="nav-link active">
                                        <i class="nav-icon fas fa-tachometer-alt"></i>
                                        <p>Dashboard</p>
                                    </a>
                                </li>

                            }
                            else
                            {

                                <li class="nav-item">
                                    <a asp-controller="AdminDashboard" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fas fa-tachometer-alt"></i>
                                        <p>Admin Dashboard</p>
                                    </a>
                                </li>


                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-users"></i>
                                        <p>
                                            Employee Management
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-controller="Employee" asp-action="Index" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Employee List</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Employee" asp-action="Create" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Add Employee</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Document" asp-action="Index" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Documents</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Document" asp-action="Categories" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Document Categories</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-user-cog"></i>
                                        <p>
                                            Administration
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-controller="UserManagement" asp-action="Index" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>User Management</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-building"></i>
                                        <p>
                                            Organization
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-controller="Department" asp-action="Index" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Departments</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Designation" asp-action="Index" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Designations</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Shift" asp-action="Index" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Shifts</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-clock"></i>
                                        <p>
                                            Attendance
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-controller="Attendance" asp-action="Index" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Attendance List</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Attendance" asp-action="Create" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Manual Entry</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Attendance" asp-action="DateRange" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Date Range Report</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-calendar-check"></i>
                                        <p>
                                            Leave Management
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-controller="LeaveType" asp-action="Index" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Leave Types</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Leave" asp-action="Index" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Leave Requests</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Leave" asp-action="Create" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Apply Leave</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Shift" asp-action="EmployeeShiftList" class="nav-link">
                                        <i class="nav-icon fas fa-clock"></i>
                                        <p>Shift Management</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Holiday" asp-action="Index" class="nav-link">
                                        <i class="nav-icon fas fa-gift"></i>
                                        <p>Holiday Calendar</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="nav-icon fas fa-money-bill-wave"></i>
                                        <p>
                                            Payroll
                                            <i class="right fas fa-angle-left"></i>
                                        </p>
                                    </a>
                                    <ul class="nav nav-treeview">
                                        <li class="nav-item">
                                            <a asp-controller="SalaryStructure" asp-action="Index" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Salary Structure</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Payroll" asp-action="Index" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Payroll Processing</p>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-controller="Payroll" asp-action="GeneratePayslip" class="nav-link">
                                                <i class="far fa-circle nav-icon"></i>
                                                <p>Payslip Generation</p>
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </aside>

            <!-- Content Wrapper -->
            <div class="content-wrapper">
                <!-- Content Header -->
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1 class="m-0 text-dark">@ViewData["Title"]</h1>
                            </div>
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="content">
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <footer class="main-footer">
                <strong>Copyright &copy; @DateTime.Now.Year HR & Payroll Management System.</strong>
                All rights reserved.
                <div class="float-right d-none d-sm-block">
                    <b>Version</b> 1.0.0
                </div>
            </footer>
        }
        else
        {
            <!-- Simplified layout for unauthenticated users -->
            <div class="content-wrapper" style="margin-left: 0;">
                <div class="content">
                    <div class="container-fluid mt-5">
                        @RenderBody()
                    </div>
                </div>
            </div>
        }

        <!-- Scripts -->
        <script src="~/plugins/jquery/jquery.min.js"></script>
        <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
        <script src="~/dist/js/adminlte.min.js"></script>
        @RenderSection("Scripts", required: false)
</body>
</html>
